<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Detailsactivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailName"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text=" Back "
            android:textSize="24sp"
            android:textColor="@color/my_primary"
            android:textStyle="bold"
            />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardImage"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/detailImage"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src=""
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="titre de l'article"
            android:id="@+id/detailTitle"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prixN"
            android:hint="prix DH"
            android:textColorHint="@color/green"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prixA"
            android:hint=" prix DH"
            android:textColorHint="@color/red"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/commentIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:src="@drawable/livraison" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prix_livraison"
            android:hint=" prix DH"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/DealButton"
        android:textColor="@color/white"
        android:text="Voir Deal"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginStart="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A propos::"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description du pc"
            android:textColorHint="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:id="@+id/dealdesc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Localisation du deal"
        android:textColorHint="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:textSize="16sp"
        android:id="@+id/locadeal"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp">
    <EditText
        android:id="@+id/Ajoutercom"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/custom_edittext"
        android:hint="Commentaire" />
        <ImageView
            android:id="@+id/imageViewClickable"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/send"
           />

    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaires"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
           >

            <!-- ImageView pour l'image -->

            <!-- TextView pour le texte -->
            <ImageView
                android:layout_width="46dp"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="commentaire 1"
                android:layout_marginStart="11dp"
                android:textColorHint="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/comment" />
        </LinearLayout>

    </LinearLayout>
