<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Detailsactivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailName"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text=" Back "
            android:textSize="24sp"
            android:textColor="@color/my_primary"
            android:textStyle="bold"
            />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardImage"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/detailImage"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/login"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titre de l'article"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix DH"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" prix DH"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <Button
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:id="@+id/DealButton"
        android:textColor="@color/white"
        android:text="Voir Deal"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_marginStart="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A propos::"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description du pc"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:id="@+id/detailTime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commentaires"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <!-- image circulaire -->

        <!-- CardView pour la section "Répondre" -->

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="commentaire 1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            tools:ignore="SmallSp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Réponses"
                android:textColor="@color/my_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Répondre"
                android:textColor="@color/my_primary"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>