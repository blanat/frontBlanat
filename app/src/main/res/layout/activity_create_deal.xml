<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Your existing RecyclerView and Select button -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_above="@+id/select"
        android:layout_marginBottom="38dp"
        android:padding="16dp" />

    <!-- Add the EditText for the deal title -->

    <!-- Add the Submit button -->

    <Button
        android:id="@+id/select"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TitreDealText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="70dp"
        android:text="Select Images" />

    <EditText
        android:id="@+id/TitreDealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="246dp"
        android:ems="10"
        android:hint="Deal Title Name"
        android:inputType="text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/submit"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="39dp"
        android:text="Submit Deal" />

    <EditText
        android:id="@+id/DescriptionDealText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="78dp"
        android:ems="10"
        android:inputType="text"
        android:text="Description"
        android:textSize="18sp"
        android:textStyle="bold"/>
</RelativeLayout>


