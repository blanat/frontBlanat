<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    tools:context=".UI.details.DealDetailsFrag">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:paddingBottom="100px"
        tools:context=".UI.Detailsactivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/select"
            android:layout_marginBottom="38dp"
            android:padding="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- Other views as needed -->

        <TextView
            android:id="@+id/listtitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titre de l'article"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"/>

        <!-- User Profile Image and Username -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/userProfileImage"
                android:scaleType="centerCrop"
                android:layout_marginEnd="10dp"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Price Information -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prixnv"
                android:text="prix DH"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prixan"
                android:text=" prix DH"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prixli"
                android:text=" prix DH"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginTop="6dp"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/livraison"
                android:id="@+id/iconeliv"
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <!-- Button to view the deal -->
        <Button
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:id="@+id/DealButton"
            android:textColor="@color/white"
            android:text="Voir Deal"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginStart="50dp" />

        <!-- Deal Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A propos:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description du deal"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:id="@+id/dealdetail"
            android:ellipsize="none" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localisation du Deal"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="9dp"
            android:textSize="16sp"
            android:id="@+id/localdeal"
            android:ellipsize="none" />

    </LinearLayout>
</FrameLayout>
