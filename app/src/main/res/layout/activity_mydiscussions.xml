<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/frameStackinputsearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_53pxh"
        >
        <RelativeLayout
            android:id="@+id/relativeRowInputSearch"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtBack"
                style="@style/txtIntermedium16_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_marginTop="@dimen/_16pxh"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/lbl_Mydiscussion" />



            <Button
                android:id="@+id/imageFloatingicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_4pxh"
                android:layout_marginTop="@dimen/_14pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_floatingicon" />



        </RelativeLayout>


    </FrameLayout>

    <!-- Include the ListView -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameStackinputsearch"
        android:layout_marginTop="4dp"
        />

</RelativeLayout>
